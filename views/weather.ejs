<!DOCTYPE html>
<html lang="en">

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <meta name="viewport"
    content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover" />
  <title>Weather Station</title>
  <link rel="stylesheet" type="text/css" href="styles/bootstrap.css" />
  <link rel="stylesheet" type="text/css" href="fonts/bootstrap-icons.css" />
  <link rel="stylesheet" type="text/css" href="styles/style.css" />
  <link rel="preconnect" href="https://fonts.gstatic.com" />
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@500;600;700;800&family=Roboto:wght@400;500;700&display=swap"
    rel="stylesheet" />
  <link rel="manifest" href="_manifest.json" />
  <meta id="theme-check" name="theme-color" content="#FFFFFF" />
  <link rel="apple-touch-icon" sizes="180x180" href="app/icons/icon-192x192.png" />
</head>

<body class="theme-light">
  <div id="preloader">
    <div class="spinner-border color-highlight" role="status"></div>
    <a href="#" data-bs-toggle="offcanvas" data-bs-target="#menu-information" class="list-group-item">
      <i class="bi bi-info-circle-fill color-blue-dark font-15"></i>
      <div>Information</div>
      <i class="bi bi-chevron-right pe-1"></i>
    </a>
  </div>

  <div id="page">

    <!-- Header -->
    <div class="header-bar header-center header-transparent shadow-m">

    </div>

    <!-- Footer Bar/Container-->
    <div id="footer-bar" class="footer-bar">
      <div class="hourly-bar">
      </div>
      <hr class="hourly-divider" />
      <div class="daily-bar">
      </div>
    </div>


    <!-- Main Sidebar-->
    <div id="menu-main" data-menu-active="nav-comps" data-menu-load="menu-main.html" style="width: 280px"
      class="offcanvas offcanvas-start offcanvas-detached rounded-m"></div>
    <!-- Menu Highlights-->
    <div id="menu-color" data-menu-load="menu-highlights.html" style="height: 340px"
      class="offcanvas offcanvas-bottom offcanvas-detached rounded-m"></div>

    <!-- Your Page Content Goes Here-->
    <div class="page-content header-clear-small">

      <div data-card-height="550" class="card card-style bg-18 rounded-l shadow-l">
        <div class="card-overlay bg-gradient-fade">
          <!-- Weather slider inside background card -->

          <!-- Carousel start --------------------------- -->
          <div id="carouselExampleNoRide" class="carousel slide is-static" data-bs-interval="false">

            <% /* Create indicators based on how many items are in citylist */ %>
              <div class="carousel-indicators">
                <% for (let i=0; i < citylist.length; i++) { %>
                  <button type="button" data-bs-target="#carouselExampleNoRide" data-bs-slide-to="<%= i %>" <% if
                    (i===0) { %>class="active" aria-current="true" <% } %> aria-label="Slide <%= i + 1 %>"></button>
                  <% } %>
              </div>

              <div class="carousel-inner">



                <div class="carousel-item active">
                  <div data-card-height="550" class="card rounded-m shadow-l">
                    <div class="card-center text-center m-3">

                    </div>
                    <div class="card-overlay rounded-m bg-gradient-fade opacity-90"></div>
                  </div>
                </div>

                <div class="carousel-item">
                  <div data-card-height="550" class="card rounded-m shadow-l">
                    <div class="card-center text-center m-3">
                      <div class="card card-style">
                        <div class="content">
                          <h4>List of locations</h4>
                          <div class="list-group list-custom list-group-m rounded-xs">
                            <% citylist.forEach((city, index)=> { %>
                              <a href="#" class="list-group-item">
                                <div>
                                  <%= city.locationName %>
                                </div>
                                <% if (index> 0) { %>
                                  <i class="bi bi-x-circle-fill color-red-light font-15"></i>
                                  <% } %>
                              </a>
                              <% }) %>

                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-overlay rounded-m bg-gradient-fade opacity-90"></div>
                </div>
              </div>


              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleNoRide"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>

              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleNoRide"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>s

          </div>





        </div>
      </div>
      <!-- End of Page Content-->
    </div>
    <!--End of Page ID-->

    <script src="scripts/bootstrap.min.js"></script>
    <script src="scripts/custom.js"></script>

</body>

</html>